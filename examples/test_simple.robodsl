cuda_kernels {
    kernel simple_test {
        input: float* data (size)
        output: float* result (size)
        block_size: (256, 1, 1)
        code: {
            int idx = blockIdx.x * blockDim.x + threadIdx.x;
            if (idx < size) {
                result[idx] = data[idx] * 2.0f;
            }
        }
    }
} 