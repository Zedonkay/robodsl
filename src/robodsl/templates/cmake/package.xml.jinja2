<?xml version="1.0"?>
<?xml-model href="http://download.ros.org/schema/package_format3.xsd" schematypens="http://www.w3.org/2001/XMLSchema"?>
<package format="3">
  <name>{{ package_name }}</name>
  <version>{{ version }}</version>
  <description>{{ description }}</description>
  <maintainer email="{{ maintainer }}">{{ maintainer }}</maintainer>
  <license>{{ license }}</license>

  <url type="website">https://github.com/robodsl/{{ package_name }}</url>
  <url type="bugtracker">https://github.com/robodsl/{{ package_name }}/issues</url>
  <url type="repository">https://github.com/robodsl/{{ package_name }}.git</url>

  <author email="{{ maintainer }}">{{ maintainer }}</author>

  <buildtool_depend>ament_cmake</buildtool_depend>
  <buildtool_depend>ament_cmake_python</buildtool_depend>

{% for dep in dependencies %}
  <depend>{{ dep }}</depend>
{% endfor %}

  <test_depend>ament_lint_auto</test_depend>
  <test_depend>ament_lint_common</test_depend>
  <test_depend>ament_cmake_gtest</test_depend>
  <test_depend>ament_cmake_pytest</test_depend>

  <export>
    <build_type>ament_cmake</build_type>
    
    <ament_cmake_export_include_directories>
      include
    </ament_cmake_export_include_directories>
    
    <ament_cmake_export_libraries>
      ${PROJECT_NAME}_lib
{% if has_cuda %}
      ${PROJECT_NAME}_cuda
{% endif %}
    </ament_cmake_export_libraries>
    
    <ament_cmake_export_dependencies>
{% for dep in dependencies %}
      {{ dep }}
{% endfor %}
    </ament_cmake_export_dependencies>
    
    <ament_cmake_export_targets>
      export_${PROJECT_NAME}
    </ament_cmake_export_targets>
  </export>
</package>
