cmake_minimum_required(VERSION 3.8)
project({{ package_name }} VERSION {{ version }})

# Set C++ standard
set(CMAKE_CXX_STANDARD 17)
set(CMAKE_CXX_STANDARD_REQUIRED ON)

# Compiler flags
if(CMAKE_COMPILER_IS_GNUCXX OR CMAKE_CXX_COMPILER_ID MATCHES "Clang")
  # Only add warning flags for C++ (not CUDA)
  add_compile_options($<$<COMPILE_LANGUAGE:CXX>:-Wall>)
  add_compile_options($<$<COMPILE_LANGUAGE:CXX>:-Wextra>)
  add_compile_options($<$<COMPILE_LANGUAGE:CXX>:-Wpedantic>)
  add_compile_options(-fPIC)
endif()

# Build configurations
set(CMAKE_CONFIGURATION_TYPES "{{ build_configs | join(';') }}")

# Find dependencies
find_package(ament_cmake REQUIRED)
find_package(ament_cmake_python REQUIRED)
find_package(rclcpp REQUIRED)

{% for dep in dependencies %}
find_package({{ dep }} REQUIRED)
{% endfor %}

{% for msg_dep in message_dependencies %}
find_package({{ msg_dep }} REQUIRED)
{% endfor %}

# CUDA support
{% if has_cuda %}
find_package(CUDA REQUIRED)
enable_language(CUDA)
set(CMAKE_CUDA_ARCHITECTURES 60 70 75 80 86)
set(CMAKE_CUDA_STANDARD 17)

# CUDA compiler flags
set(CMAKE_CUDA_FLAGS "${CMAKE_CUDA_FLAGS} -O3")
if(CMAKE_BUILD_TYPE STREQUAL "Debug")
  set(CMAKE_CUDA_FLAGS "${CMAKE_CUDA_FLAGS} -g -G")
endif()

{% for cuda_dep in cuda_dependencies %}
find_package({{ cuda_dep }} REQUIRED)
{% endfor %}
{% endif %}

# Include directories
include_directories(include)
{% for include_dir in include_dirs %}
include_directories({{ include_dir }})
{% endfor %}

# Create library for common code (INTERFACE for header-only library)
add_library(${PROJECT_NAME}_lib INTERFACE)

target_include_directories(${PROJECT_NAME}_lib INTERFACE include)
ament_target_dependencies(${PROJECT_NAME}_lib INTERFACE rclcpp)

{% if has_cuda %}
# CUDA library
add_library(${PROJECT_NAME}_cuda STATIC
{% for cuda_source in cuda_sources %}
  {{ cuda_source }}
{% endfor %}
)

set_target_properties(${PROJECT_NAME}_cuda PROPERTIES
  CUDA_SEPARABLE_COMPILATION ON
  POSITION_INDEPENDENT_CODE ON
)

target_include_directories(${PROJECT_NAME}_cuda PUBLIC include)
target_link_libraries(${PROJECT_NAME}_cuda ${PROJECT_NAME}_lib)
{% endif %}

# Create executables
{% for exec in executables %}
add_executable({{ exec.name }}
  {{ exec.source }}
)

target_link_libraries({{ exec.name }} ${PROJECT_NAME}_lib)
{% if has_cuda %}
target_link_libraries({{ exec.name }} ${PROJECT_NAME}_cuda)
{% endif %}

ament_target_dependencies({{ exec.name }} rclcpp)
{% for dep in dependencies %}
ament_target_dependencies({{ exec.name }} {{ dep }})
{% endfor %}
{% for msg_dep in message_dependencies %}
ament_target_dependencies({{ exec.name }} {{ msg_dep }})
{% endfor %}

{% endfor %}

# Python modules (if any)
# python_install_package(${PROJECT_NAME})  # Disabled for C++-only packages

# Install targets
install(TARGETS
{% for exec in executables %}
  {{ exec.name }}
{% endfor %}
  ${PROJECT_NAME}_lib
{% if has_cuda %}
  ${PROJECT_NAME}_cuda
{% endif %}
  DESTINATION lib/${PROJECT_NAME}
)

# Install headers
install(DIRECTORY include/
  DESTINATION include/${PROJECT_NAME}
  FILES_MATCHING PATTERN "*.hpp" PATTERN "*.h" PATTERN "*.cuh"
)

# Install Python modules (if any)
# install(DIRECTORY
#   ${PROJECT_NAME}
#   DESTINATION lib/python3/dist-packages/
# )

# Install launch files
install(DIRECTORY
  launch
  DESTINATION share/${PROJECT_NAME}/
)

# Install configuration files
install(DIRECTORY
  config
  DESTINATION share/${PROJECT_NAME}/
)

# Testing
if(BUILD_TESTING)
  find_package(ament_lint_auto REQUIRED)
  ament_lint_auto_find_test_dependencies()
  
  find_package(ament_cmake_gtest REQUIRED)
  find_package(ament_cmake_pytest REQUIRED)
  
  {% for test_dep in test_dependencies %}
  find_package({{ test_dep }} REQUIRED)
  {% endfor %}
  
  # Add tests
  {% for test_source in test_sources %}
  ament_add_gtest(test_{{ test_source.split('/')[-1].replace('.cpp', '') }} {{ test_source }})
  target_link_libraries(test_{{ test_source.split('/')[-1].replace('.cpp', '') }} ${PROJECT_NAME}_lib)
  ament_target_dependencies(test_{{ test_source.split('/')[-1].replace('.cpp', '') }} rclcpp)
  {% endfor %}
  
  # Python tests (disabled for C++-only packages)
  # ament_add_pytest_test(test_${PROJECT_NAME}_python
  #   ${PROJECT_NAME}/test_${PROJECT_NAME}.py
  #   WORKING_DIRECTORY ${CMAKE_CURRENT_SOURCE_DIR}
  # )
endif()

# Documentation
if(BUILD_DOCS)
  find_package(Doxygen)
  if(DOXYGEN_FOUND)
    set(DOXYGEN_IN ${CMAKE_CURRENT_SOURCE_DIR}/docs/Doxyfile.in)
    set(DOXYGEN_OUT ${CMAKE_CURRENT_BINARY_DIR}/Doxyfile)
    
    configure_file(${DOXYGEN_IN} ${DOXYGEN_OUT} @ONLY)
    
    add_custom_target(docs ALL
      COMMAND ${DOXYGEN_EXECUTABLE} ${DOXYGEN_OUT}
      WORKING_DIRECTORY ${CMAKE_CURRENT_BINARY_DIR}
      COMMENT "Generating API documentation with Doxygen"
      VERBATIM
    )
  endif()
endif()

# Export dependencies
ament_export_include_directories(include)
ament_export_libraries(${PROJECT_NAME}_lib)
{% if has_cuda %}
ament_export_libraries(${PROJECT_NAME}_cuda)
{% endif %}
ament_export_dependencies(rclcpp)
{% for dep in dependencies %}
ament_export_dependencies({{ dep }})
{% endfor %}

ament_package()
